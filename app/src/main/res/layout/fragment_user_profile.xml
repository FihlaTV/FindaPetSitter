<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <!--
    <include layout="@layout/toolbar" />
    -->

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/diagonalLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        diagonal:diagonal_angle="10"
        diagonal:diagonal_gravity="left">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_gradient" />

        <!--
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shape_rectangle_gradient" />
                    -->

    </com.github.florent37.diagonallayout.DiagonalLayout>

    <RelativeLayout
        android:elevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserProfileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle"
            android:elevation="20dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            tools:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivUserProfileImage"

            android:layout_marginTop="20dp"
            android:textSize="40sp"
            tools:text="Katy Smith" />

        <!--
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivUserProfileImage"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            tools:text="Katy Smith" />
            -->

        <TextView
            android:id="@+id/tvUserNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:textSize="30sp"
            tools:text="(Kat)" />

        <TextView
            android:id="@+id/tvUserDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserNickname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            tools:text="This is description of the user or tagline. Use can introduce themselves in short sentences." />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvUserDescription"
            android:layout_below="@+id/tvUserDescription"
            android:layout_marginTop="26dp"
            android:text="Contact:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvUserPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvContact"
            android:layout_below="@+id/tvContact"
            android:layout_marginTop="10dp"
            tools:text="Phone Number: 123-456-7890" />

        <TextView
            android:id="@+id/tvUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvUserPhoneNumber"
            android:layout_below="@+id/tvUserPhoneNumber"
            android:layout_marginTop="10dp"
            tools:text="Lives in: Santa Clara, CA" />

        <ScrollView
            android:id="@+id/svProfileScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserAddress"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--
                <ImageView
                    android:id="@+id/ivUserProfileImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="66dp"
                    tools:src="@mipmap/ic_launcher" />
                    -->


                <TextView
                    android:id="@+id/tvUserPets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Pet:"
                    android:textSize="20sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUserPets"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp" />


                <RelativeLayout
                    android:id="@+id/rl_action_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rvPets"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="20dp">

                    <Button
                        android:id="@+id/btSendRequestOrEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        tools:text="Send Request" />

                    <LinearLayout
                        android:id="@+id/ll_review_btns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btSendRequestOrEdit"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="20dp">

                        <Button
                            android:id="@+id/btWriteReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:visibility="gone"
                            tools:text="Write Review" />

                        <Button
                            android:id="@+id/btViewReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="11dp"
                            android:visibility="gone"
                            tools:text="View Reviews" />
                    </LinearLayout>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/flReviewsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/rl_action_buttons"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>