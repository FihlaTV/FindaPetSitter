<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:background="@drawable/card_background_1"
        android:id="@+id/rlRequestReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivRequestProfile"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvRequestReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ivRequestProfile"
            android:layout_toStartOf="@+id/tvRequestStatus"
            android:textColor="@color/darker_grey"
            android:textAppearance="?android:attr/textAppearanceLarge"

            tools:text="You've got a request from Katie!" />

        <TextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            tools:background="@color/green"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            tools:text="Accepted" />

    </RelativeLayout>
</android.support.v7.widget.CardView>