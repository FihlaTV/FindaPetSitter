<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:id="@+id/linear_layout_review_title"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="WRITE REVIEW"
            android:id="@+id/tvRequestTitle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:id="@+id/linear_layout_review_pet_type"
        android:layout_below="@+id/linear_layout_review_title">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pet type"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvReviewPetType"/>

        <Spinner
            android:layout_gravity="center_horizontal"
            android:id="@+id/spReviewPetType"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@id/linear_layout_review_pet_type"
        android:id="@+id/linear_layout_review">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvReview"
            />

        <RatingBar
            android:id="@+id/rbReviewRating"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:numStars="5"
            android:max="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyle"
            android:transformPivotX="10dp"
            android:transformPivotY="10dp"
            android:progressTint="@color/darkorange"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvReview"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:ems="4"
            android:id="@+id/etReview"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rbReviewRating"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_review_action_buttons"
        android:layout_below="@id/linear_layout_review"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/btnReviewCancel"
            android:gravity="center"
            android:backgroundTint="@color/teal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:backgroundTint="@color/darkorange"
            android:id="@+id/btnReviewSave"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>